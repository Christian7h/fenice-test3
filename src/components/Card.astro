---
// src/components/Card.astro
interface Props {
    id: string;
    title: string;
    body: string;
    imgSrc: string;
    price: string;
    oldPrice?: string;
    url: string;
}

const { id, title, body, imgSrc, price, oldPrice, url } = Astro.props;
---

<div class="relative flex flex-col w-full max-w-xs overflow-hidden border border-gray-100 bg-white shadow-xl shadow-black rounded-lg">
    <a href={url} class="relative flex mx-3 mt-3 h-60 overflow-hidden rounded-xl">
        <img src={imgSrc} alt={title} class="object-cover w-full h-full"/>
    </a>
    <div class="px-5 pb-5 mt-4">
        <a href={url}>
            <h5 class="text-xl tracking-tight text-slate-900">{title}</h5>
        </a>
        <div class="flex items-center justify-between mt-2 mb-5">
            <p>
                <span class="text-3xl font-bold text-slate-900">{price}</span>
                {oldPrice && <span class="text-sm text-slate-900 line-through ml-2">{oldPrice}</span>}
            </p>
        </div>
        <button
            class="flex items-center justify-center px-5 py-2.5 text-center text-sm font-medium text-white bg-slate-900 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-blue-300 snipcart-add-item"
            data-item-id={id}
            data-item-url={url}
            data-item-name={title}
            data-item-price={price}
            data-item-image={imgSrc}
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Agregar al carrito
        </button>
    </div>
</div>
